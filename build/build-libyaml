#!/bin/bash
PATH="${PATH}:/opt/miyoo/bin:/opt/miyoo/arm-miyoo-linux-uclibcgnueabi/sysroot/usr/bin"
CROSS_COMPILE=/opt/miyoo/bin/arm-miyoo-linux-uclibcgnueabi-
CC=${CROSS_COMPILE}gcc
AR=${CROSS_COMPILE}ar
AS=${CROSS_COMPILE}as
LD=${CROSS_COMPILE}ld
CXX=${CROSS_COMPILE}g++
HOST=arm-miyoo-linux-uclibcgnueabi
PREFIX=/opt/miyoo/

git clone --depth=1 --branch 0.2.5 https://github.com/yaml/libyaml
cd libyaml
./bootstrap
./configure --host=${HOST} --prefix=${PREFIX}
make install
